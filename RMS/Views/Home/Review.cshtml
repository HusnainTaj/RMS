@model MenuItem

@{
    ViewData["Title"] = "Review";
}

<div class="row my-5">
    <div class="col-3"></div>
    <div class="col-6 d-flex g-4 flex-column justify-content-center  bg-dark-subtle rounded-2 p-5" style="gap: 20px;">
        <img src="@Model.ImageURL" height="400" class="object-fit-cover border rounded" style="max-width:100%" alt="Menu Item">
        <h2>@Model.Name</h2>
        <form action="/Home/SubmitReview/@Model.Id" class="d-flex flex-column" style="gap: 20px;">
            <div class="form-floating">
                <textarea class="form-control" placeholder="Leave a comment here" id="txt" name="txt" style="height: 100px"></textarea>
                <label for="floatingTextarea2">Your Review</label>
            </div>
            <button class="btn btn-primary w-100" type="submit">Submit</button>
        </form>
    </div>
</div>